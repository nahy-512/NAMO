<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_todo_category_background"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:padding="13dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/ic_todo_categorybox_no_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/item_todo_category_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/todo_assignment"
            android:text="과제"/>

        <TextView
            android:id="@+id/item_todo_category_itemsize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/todo_assignment"
            android:text="4개 항목"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>