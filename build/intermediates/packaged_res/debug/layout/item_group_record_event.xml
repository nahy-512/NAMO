<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_group_record_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_group_record_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나인원 보드게임카페"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/item_group_record_pay_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_group_record_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액 정산"
                android:textStyle="bold"
                android:textColor="@color/realGray"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/item_group_record_pay_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_arrow_right_gray"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/item_group_record_img1_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layerType="software"
            android:scaleType="centerInside"
            android:background="@drawable/gallery_background"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/item_group_record_img2_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layerType="software"
            android:scaleType="centerInside"
            android:background="@drawable/gallery_background"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_group_record_img1_iv"
            app:layout_constraintEnd_toStartOf="@id/item_group_record_img3_iv"/>

        <ImageView
            android:id="@+id/item_group_record_img3_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layerType="software"
            android:scaleType="centerInside"
            android:background="@drawable/gallery_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>