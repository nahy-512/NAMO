<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/item_group_pay_activity_checkBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:checked="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_group_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_marginStart="7dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/item_group_pay_activity_checkBox"
        app:layout_constraintBottom_toBottomOf="@id/item_group_pay_activity_checkBox"
        app:layout_constraintStart_toEndOf="@id/item_group_pay_activity_checkBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>