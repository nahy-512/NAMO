<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--나중에 drawable layout으로 바꾸기-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/test_list_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수빈"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/test_list_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qkrtnqls8909@nate.com"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/test_list_name_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/test_list_birth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0328"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/test_list_email_tv"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/test_list_birth_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/test_menu_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/test_menu_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="회원 탈퇴"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


