<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/group_calendar_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/group_calendar_group_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/group_calendar_group_title_tv"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="나모 그룹 캘린더"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/group_calendar_group_more_iv"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_calendar_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shadow_bottom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/group_calendar_group_header_layout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="일"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="월"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="화"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="수"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="목"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="금"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/white"
            android:textColor="@color/notyetGray"
            android:gravity="center_horizontal"
            android:text="토"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>